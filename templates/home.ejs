<%
const description = config.siteDescription;
const currentPath = '/';
%>
<%- include('layouts/main', { 
    title: 'Home',
    description: description,
    currentPath: currentPath,
    content: `
    <div class="hero-section">
        <div class="container">
            <h1 class="hero-title">${config.siteName}</h1>
            <p class="hero-subtitle">${config.siteDescription}</p>
            <a href="/blog" class="btn btn-primary btn-lg">Explore Blog</a>
        </div>
    </div>

    <section class="feature-section">
        <div class="container">
            <div class="row">
                <div class="col-md-4 text-center">
                    <i class="fas fa-lightbulb feature-icon"></i>
                    <h2 class="feature-title">Expert Insights</h2>
                    <p class="feature-description">Gain valuable insights from years of experience in the tech industry. Practical tips, best practices, and in-depth analyses of the latest trends.</p>
                </div>
                <div class="col-md-4 text-center">
                    <i class="fas fa-book feature-icon"></i>
                    <h2 class="feature-title">Tutorials & Guides</h2>
                    <p class="feature-description">Learn new skills with step-by-step tutorials and comprehensive guides. From beginner to advanced topics, there's something for everyone.</p>
                </div>
                <div class="col-md-4 text-center">
                    <i class="fas fa-star feature-icon"></i>
                    <h2 class="feature-title">Tech Reviews</h2>
                    <p class="feature-description">Stay up-to-date with the latest tools and technologies. Honest reviews and comparisons to help you make informed decisions.</p>
                </div>
            </div>
        </div>
    </section>

    <section class="latest-posts-section">
        <div class="container">
            <h2 class="section-title">Latest Posts</h2>
            <div class="row">
                ${posts.slice(0, 3).map(post => `
                    <div class="col-md-4 mb-4">
                        <div class="post-card">
                            <div class="post-card-image" style="background-image: url('${post.image || '/images/default-post-image.jpg'}');"></div>
                            <div class="post-card-content">
                                <h3 class="post-card-title">${post.title}</h3>
                                <p class="post-card-excerpt">${helpers.truncate(post.description, 100)}</p>
                                <div class="post-card-meta">
                                    <span class="post-card-date">
                                        <i class="far fa-calendar-alt"></i>
                                        ${helpers.formatDate(post.date)}
                                    </span>
                                    <div class="post-card-categories">
                                        ${post.categories.map(category => `
                                            <span class="post-card-category">${category}</span>
                                        `).join('')}
                                    </div>
                                </div>
                                <a href="${post.url}" class="post-card-link">
                                    Read More <i class="fas fa-arrow-right"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                `).join('')}
            </div>
        </div>
    </section>
    `
}) %>
