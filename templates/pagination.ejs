<%- include('layouts/main', { 
    title: `Blog - Page ${currentPage}`, 
    content: `
        <h1>Blog Posts</h1>
        <div class="row">
            ${posts.map(post => `
                <div class="col-md-6 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">${post.title}</h5>
                            <h6 class="card-subtitle mb-2 text-muted">${helpers.formatDate(post.date)}</h6>
                            <p class="card-text">${helpers.truncate(post.description, 150)}</p>
                            <a href="${post.url}" class="btn btn-outline-primary">Read More</a>
                        </div>
                    </div>
                </div>
            `).join('')}
        </div>
        
        <nav aria-label="Page navigation">
            <ul class="pagination">
                ${currentPage > 1 ? `
                    <li class="page-item">
                        <a class="page-link" href="/blog/page/${currentPage - 1}">Previous</a>
                    </li>
                ` : ''}
                ${Array.from({length: totalPages}, (_, i) => i + 1).map(page => `
                    <li class="page-item ${page === currentPage ? 'active' : ''}">
                        <a class="page-link" href="/blog/page/${page}">${page}</a>
                    </li>
                `).join('')}
                ${currentPage < totalPages ? `
                    <li class="page-item">
                        <a class="page-link" href="/blog/page/${currentPage + 1}">Next</a>
                    </li>
                ` : ''}
            </ul>
        </nav>
    `
}) %>
